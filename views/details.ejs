<div class="container">
    <div class="row mt-5">
        <h2 class="card-title">Details Contact</h2>
        <% if (!find) { %>
            <div class="alert alert-danger" role="alert">
                Nama Tidak Ada Dalam Daftar Contact <a href="/contact" class="alert-link"><br> Kembali Ke Daftar Contact</a>
              </div>                       
        <% }else{ %>
        <div class="card" style="width: 30rem;">
            <br></br>
            <div class="card-body">
              <h6 class="card-text"><strong>Nama : </strong> <%= find.nama %> </h6>
              <h6 class="card-text"><strong>No Hp : </strong> <%= find.nohp %> </h6>
              <h6 class="card-text"><strong>Email : </strong> <%= find.email %> </h6>
              <h6 class="card-text"><strong>Domisili : </strong> <%= find.domisili %> </h6>
              <a href="/contact" class="card-link">&laquo; Kembali</a>
            </div>
          </div>
          <% } %> 
    </div>
</div>